{% comment %}
  Password Template
    Template that will be displayed when the site is in password protected mode

  Version:
    1.0.0 - 2018/10/31
{% endcomment %}

{%- layout 'password' -%}

<div class="c-template-password__wrapper">
  <div class="c-template-password">
    <header class="c-template-password__logo" itemscope itemtype="http://schema.org/Organization">
      <!-- <div class="o-logo">  {%- render 'site-logo' -%} </div> -->
    </header>

    {% comment %} Titles {% endcomment %}
    <div class="c-template-password__titles">

      {%- comment -%} Logo {%- endcomment -%}
      <div class="c-template-password__logo-svg">
        <!-- Place inline svg logo here -->
        {%- render 'object.icon' with {
          icon: 'logo',
          class: 'c-template-password__logo-image'
        } -%}
      </div>

      <h2 class="o-title o-heading__inner">
        {{- 'general.password_page.opening_soon' | t -}}
      </h2>
      {%- unless shop.password_message == blank -%}
        <span class="o-heading__inner">
          {{- shop.password_message -}}
        </span>
      {%- endunless -%}
    </div>

    <section class="c-template-password__login">
      <p class="c-template-password__subheading">{{ 'general.password_page.login_form_heading' | t }}</p>
      {%- form 'storefront_password' -%}
        {{- form.errors | default_errors -}}

        <div class="c-template-password__row">

            <input type="password"
              class="o-input is-full c-template-password__row-input is-primary"
              name="password"
              placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
              value=""
              autocomplete="off"
            />

          <button class="o-btn c-template-password__row-button is-secondary" type="submit" name="commit">
            {{ 'general.password_page.login_form_submit' | t }}
          </button>
        </div>
      {% endform %}
      <p class="c-template-password__subheading-2">{{ 'general.password_page.admin_link_html' | t }}</p>
    </section>

    <br>

    <section class="c-template-password__register">
      {%- form 'customer' -%}
        {{- form.errors | default_errors -}}
        {%- if form.posted_successfully? -%}
          <div>{{ 'general.password_page.signup_form_success' | t }}</div>
        {%- else -%}
          <p class="c-template-password__subheading">{{ 'general.password_page.signup_form_heading' | t }}</p>
          <input type="hidden" name="contact[tags]" value="prospect, password page">
          <input type="hidden" name="customer[accepts_marketing]" value="" />

          <div class="c-template-password__row">

            <input type="email"
              class="o-input is-full c-template-password__row-input is-primary"
              name="contact[email]"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off"
              placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}"
            />

            <button type="submit"  name="commit" class="o-btn c-template-password__row-button is-secondary">
              {{ 'general.password_page.signup_form_submit' | t }}
            </button>

          </div>

        {% endif %}
      {% endform %}
    </section>


    <footer class="c-template-password__footer">
      <p class="c-template-password__footer-brand c-template-password__subheading-2">
        &copy; {{ 'now' | date: "%Y" | escape }} {{ shop.name | escape }}

        <a href="//processcreative.com.au" class="o-link c-template-password__footer-process">
          Site <em>by</em> Process
        </a>
      </p>
    </footer>
  </div>
</div>
